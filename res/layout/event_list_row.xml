<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/event_selection">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/event_name_text"
            android:layout_toLeftOf="@+id/event_time_text"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_alignParentRight="true"
            android:id="@+id/event_time_text"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
        android:src="@drawable/friends_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/people_in_event"
        android:background="@null"
        android:paddingRight="10dp"
        android:layout_toLeftOf="@+id/event_chat"/>
        
        <ImageView
        android:src="@drawable/chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_chat"
        android:background="@null"
        android:layout_centerInParent="true"/>
        
        <ImageView
        android:src="@drawable/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_pictures"
        android:background="@null"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/event_chat"/>
        
        
    </RelativeLayout>
    

</LinearLayout>
